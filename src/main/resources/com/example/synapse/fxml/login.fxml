<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.synapse.controllers.LoginController">
    <!-- Background Layer -->
    <StackPane id="root-pane" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <!-- Outer VBox for centering with padding -->
        <VBox alignment="CENTER" spacing="20" id="outer-vbox">
            <!-- Centered Login Container -->
            <VBox alignment="CENTER" spacing="15" id="login-container">
                <!-- Logo and Synapse Label -->
                <HBox alignment="CENTER" spacing="10">
                    <Label id="synapse-label" text="Synapse" />
                </HBox>

                <!-- Title -->
                <Label id="login-title" text="Login" />

                <!-- Username or Email Input -->
                <GridPane alignment="CENTER" hgap="10" vgap="10">
                    <TextField fx:id="usernameOrEmailField" promptText="Enter your username or email" id="username-field" />
                </GridPane>

                <!-- Password Input -->
                <GridPane alignment="CENTER" hgap="10" vgap="10">
                    <TextField fx:id="passwordField" promptText="Enter your password" id="password-field" />
                </GridPane>

                <!-- Login Button -->
                <Button onAction="#handleLogin" text="Login" id="login-button" />

                <!-- Social Login Section -->
                <VBox alignment="CENTER" spacing="10" id="social-login-container">
                    <Label id="social-login-label" text="Or continue with:" />
                    <Button text="Google" id="google-button" />
                    <Button text="Microsoft" id="microsoft-button" />
                    <Button text="Apple" id="apple-button" />
                    <Button text="Slack" id="slack-button" />
                </VBox>

                <!-- Registration Section -->
                <HBox alignment="CENTER" spacing="5">
                    <Label id="login-helper-label" text="Can't Log in? â€¢" />
                    <Hyperlink onAction="#handleSignUp" text="Create an account" id="signup-link" />
                </HBox>
            </VBox>
        </VBox>
    </StackPane>
    <stylesheets>
        <URL value="@../css/login.css" />
    </stylesheets>
</AnchorPane>
