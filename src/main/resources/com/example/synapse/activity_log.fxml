<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="545.0" prefWidth="621.0" style="-fx-background-color: #2f3136;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.synapse.ActivityLog">

<!-- Back Button -->
<HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10">
    <Button fx:id="backButton" prefHeight="30.0" prefWidth="70.0" style="-fx-background-color: #0079BF; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 5 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.3, 2, 2);" text="← Back" />
</HBox>

<!-- Filters Section -->
<VBox prefHeight="119.0" prefWidth="603.0" spacing="15.0" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="60">
    <!-- User Selection -->
    <HBox prefHeight="37.0" prefWidth="471.0" spacing="10" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.3, 2, 2);">
        <Label alignment="CENTER" prefHeight="37.0" prefWidth="113.0" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #3a3e45; -fx-background-radius: 10px;" text="Select User:" textOverrun="CENTER_ELLIPSIS" />
        <ComboBox fx:id="userComboBox" promptText="Select a user" style="-fx-background-color: #0079BF; -fx-text-fill: white; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 5; -fx-font-weight: bold;" />
    </HBox>

    <!-- Task Selection -->
    <HBox spacing="10" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.3, 2, 2);">
        <Label alignment="CENTER" prefHeight="37.0" prefWidth="115.0" style="-fx-text-fill: White; -fx-font-size: 14px; -fx-background-color: #3a3e45; -fx-background-radius: 10px;" text="Select Task:" />
        <ComboBox fx:id="taskComboBox" promptText="Select a task" style="-fx-background-color: #0079BF; -fx-text-fill: white; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 5; -fx-font-weight: bold;" />
    </HBox>

    <!-- Date Range Selection and Search Button -->
    <HBox spacing="60.0">
        <HBox spacing="10.0">
            <Label alignment="CENTER" prefHeight="36.0" prefWidth="53.0" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #3a3e45; -fx-background-radius: 10px;" text="From:" />
            <DatePicker fx:id="startDatePicker" style="-fx-background-color: #0079BF; -fx-text-fill: white; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.3, 2, 2);" />
            <Label alignment="CENTER" prefHeight="36.0" prefWidth="53.0" style="-fx-text-fill: White; -fx-font-size: 14px; -fx-background-color: #3a3e45; -fx-background-radius: 10px;" text="To:" />
            <DatePicker fx:id="endDatePicker" style="-fx-background-color: #0079BF; -fx-text-fill: white; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.3, 2, 2);" />
        </HBox>

        <!-- Search Button aligned to the right -->
        <HBox>
            <Button prefHeight="32.0" prefWidth="116.0" style="-fx-background-color: #0079BF; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 5; -fx-font-weight: bold;" text="Search" />
        </HBox>
    </HBox>
</VBox>

<!-- Error Message Section -->
<Label fx:id="errorMessageLabel" style="-fx-font-size: 12px;" text="" textFill="#E74C3C" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="180" />

<!-- Logs Table -->
<TableView fx:id="activityLogTable" layoutY="212.0" prefHeight="313.0" prefWidth="581.0" style="-fx-background-color: white; -fx-border-radius: 20; -fx-background-radius: 5;" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="212.0">
    <columns>
        <TableColumn fx:id="taskNameColumn" prefWidth="150" style="-fx-text-fill: #2C3E50; -fx-alignment: CENTER;" text="Task Name" />
        <TableColumn fx:id="userColumn" prefWidth="100" style="-fx-text-fill: #2C3E50; -fx-alignment: CENTER;" text="User" />
        <TableColumn fx:id="actionColumn" prefWidth="200" style="-fx-text-fill: #2C3E50; -fx-alignment: CENTER;" text="Action" />
        <TableColumn fx:id="timestampColumn" prefWidth="150" style="-fx-text-fill: #2C3E50; -fx-alignment: CENTER;" text="Timestamp" />
    </columns>
</TableView>

</AnchorPane>
