<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.synapse.controllers.DashboardController" stylesheets="@../css/dashboard.css">
    <!-- Top Navbar -->
    <HBox fx:id="topNavbar" alignment="CENTER" spacing="10" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Left Side of Navbar -->
        <HBox alignment="CENTER" spacing="10">
            <ImageView fx:id="logo" fitHeight="40" fitWidth="40" />
            <Label fx:id="navbarLabel" text="Synapse" />
            <Button fx:id="activtyButton" styleClass="navbar-button" onAction="#handleActivty" text="Activity Log" />
            <Button fx:id="recentButton" styleClass="navbar-button" text="Recent" />
            <Button fx:id="teamChat" styleClass="navbar-button" onAction="#handleChat" text="Team Chat" />
            <Button fx:id="reportButton" styleClass="navbar-button" onAction="#handleReport" text="Generate Reports" />
            <Button fx:id="manageUsersButton" styleClass="navbar-button" text="Manage Users" onAction="#handleManageUsers" visible="false" />
            <Button fx:id="userFeedbackButton" styleClass="navbar-button" text="User Feedback" onAction="#handleFeedback" visible="false" />
            <Button fx:id="createButton" styleClass="navbar-button" text="Create New Board" />
        </HBox>

        <!-- Spacer -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Right Side -->
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="searchField" promptText="Search" />
            <Button fx:id="helpButton" text="?" />
            <StackPane>
                <Circle fx:id="profileCircle" fill="#40444B" radius="15" />
                <Label fx:id="profileLabel" text="A" />
            </StackPane>
        </HBox>
    </HBox>

    <!-- Main Content Area -->
    <HBox styleClass="mainContentBox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
        <!-- Side Panel (Vertical Scroll) -->
        <ScrollPane fx:id="sidePanelScroll" styleClass="scroll-bar" fitToHeight="true" fitToWidth="true" vbarPolicy="AS_NEEDED">
            <VBox fx:id="sidePanel" prefWidth="350" spacing="20">
                <Label fx:id="yourBoardsLabel" text="Your Boards" />
                <VBox spacing="10">
                    <StackPane fx:id="board1">
                        <Label fx:id="board1Label" text="Skyline Academic" />
                    </StackPane>
                    <StackPane fx:id="board2">
                        <Label fx:id="board2Label" text="Development Board" />
                    </StackPane>
                </VBox>
            </VBox>
        </ScrollPane>

        <!-- Main Content Area -->
        <ScrollPane fx:id="mainScrollPane" styleClass="scroll-bar" fitToHeight="true" fitToWidth="true">
            <HBox fx:id="taskListsContainer" spacing="20" HBox.hgrow="ALWAYS">
                <!-- Task List 1 (Vertical Scroll) -->
                <ScrollPane fx:id="taskList1Scroll" styleClass="scroll-bar" fitToHeight="true" fitToWidth="true" vbarPolicy="AS_NEEDED">
                    <VBox fx:id="taskList1" spacing="10">
                        <Label fx:id="taskList1Title" text="New Tasks" />
                        <VBox fx:id="taskList1Cards" spacing="10" >
                            <StackPane fx:id="task1Card" styleClass="task-card">
                                <Label fx:id="task1Label" styleClass="task-labels" text="Task 1: Alternative video for Assignment" />
                            </StackPane>
                            <StackPane fx:id="task2Card" styleClass="task-card">
                                <Label fx:id="task2Label" styleClass="task-labels" text="Task 2: Create video walkthrough for Skyline" />
                            </StackPane>

                            <StackPane fx:id="task4Card" styleClass="task-card">
                                <Label fx:id="task4Label" styleClass="task-labels" text="Task 2: Create video walkthrough for Skyline" />
                            </StackPane>

                            <StackPane fx:id="task5Card" styleClass="task-card">
                                <Label fx:id="task5Label" styleClass="task-labels" text="Task 2: Create video walkthrough for Skyline" />
                            </StackPane>

                            <StackPane fx:id="task6Card" styleClass="task-card">
                                <Label fx:id="task6Label" styleClass="task-labels" text="Task 2: Create video walkthrough for Skyline" />
                            </StackPane>

                            <StackPane fx:id="task9Card" styleClass="task-card">
                                <Label fx:id="task9Label" styleClass="task-labels" text="Task 2: Create video walkthrough for Skyline" />
                            </StackPane>

                            <StackPane fx:id="task10Card" styleClass="task-card">
                                <Label fx:id="task10Label" styleClass="task-labels" text="Task 2: Create video walkthrough for Skyline" />
                            </StackPane>

                            <StackPane fx:id="task11Card" styleClass="task-card">
                                <Label fx:id="task11Label" styleClass="task-labels" text="Task 2: Create video walkthrough for Skyline" />
                            </StackPane>
                            <StackPane fx:id="task12Card" styleClass="task-card">
                                <Label fx:id="task12Label" styleClass="task-labels" text="Task 2: Create video walkthrough for Skyline" />
                            </StackPane>

                            <StackPane fx:id="task13Card" styleClass="task-card">
                                <Label fx:id="task13Label" styleClass="task-labels" text="Task 2: Create video walkthrough for Skyline" />
                            </StackPane>



                        </VBox>

                        <Button fx:id="addCardButton1" onAction="#handleCard" text="+ Add a card" />
                    </VBox>
                </ScrollPane>

                <!-- Task List 2 (Vertical Scroll) -->
                <ScrollPane fx:id="taskList2Scroll" styleClass="scroll-bar" fitToHeight="true" fitToWidth="true" vbarPolicy="AS_NEEDED">
                    <VBox fx:id="taskList2" spacing="10">
                        <Label fx:id="taskList2Title" text="Abdullah's WIP" />

                        <VBox fx:id="taskList2Cards" spacing="10">
                            <StackPane fx:id="taskList2Card1" styleClass="task-card">
                                <Label fx:id="taskList2Card1Label" styleClass="task-labels" text="Task 1: Skyline website checklist" />
                            </StackPane>
                            <StackPane fx:id="taskList2Card2" styleClass="task-card">
                                <Label fx:id="taskList2Card2Label" styleClass="task-labels" text="Task 2: Create video for Plagiarism/AI workflow" />
                            </StackPane>
                        </VBox>

                        <Button fx:id="addCardButton2" onAction="#handleCard" text="+ Add a card" />
                    </VBox>
                </ScrollPane>

            </HBox>
        </ScrollPane>
    </HBox>
</AnchorPane>
