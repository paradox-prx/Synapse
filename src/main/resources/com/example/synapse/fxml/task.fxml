<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.synapse.controllers.TaskController"
            prefHeight="700.0" prefWidth="600.0"
            stylesheets="@../css/task.css">
    <!-- Main Container -->
    <VBox spacing="15" fx:id="mainContainer" style="-fx-padding: 15;">
        <!-- Title Section -->
        <HBox spacing="10" alignment="CENTER_LEFT" fx:id="titleSection">
            <Label text="Task Details" fx:id="titleLabel" />
            <Button text="Set Deadlines" onAction="#handleSetDeadlines" fx:id="setDeadlineButton" />
            <Button text="Assign Tasks" onAction="#handleAssignTasks" fx:id="assignTasksButton" />
            <Button text="Set Priorities" onAction="#handleSetPriorities" fx:id="setPrioritiesButton" />
            <Button text="Send Deadline Notification" onAction="#handleSendNotifications" fx:id="sendNotificationButton" />
        </HBox>

        <!-- Description Section -->
        <VBox spacing="10" fx:id="descriptionSection">
            <Label text="Description" fx:id="descriptionLabel" />
            <TextArea promptText="Enter task description here..."
                      fx:id="descriptionTextArea"
                      wrapText="true"
                      prefHeight="50"
                      style="-fx-background-color: #D3D3D3; -fx-text-fill: #000; -fx-border-color: #A9A9A9; -fx-border-radius: 5;" />
            <Button text="Edit Description" onAction="#handleEditDescription" fx:id="editDescriptionButton" />
        </VBox>

        <!-- To-Do Section -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" fx:id="todoScrollPane" maxHeight="180">
            <VBox spacing="10" fx:id="todoSection" maxHeight="200">
                <Label text="To-Do" fx:id="todoLabel" />
                <Button text="Add Item" onAction="#handleAddTodoItem" fx:id="addTodoButton" />
            </VBox>
        </ScrollPane>

        <!-- Comments Section -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" fx:id="commentsScrollPane" maxHeight="180">
            <VBox spacing="10" fx:id="commentsSection" maxHeight="100">
                <Label text="Comments" fx:id="commentsLabel" />
                <TextField promptText="Add a comment..."
                           fx:id="commentInput"
                           style="-fx-background-color: #D3D3D3; -fx-text-fill: #000; -fx-border-color: #A9A9A9; -fx-border-radius: 5;" />
                <Button text="Submit Comment" onAction="#handleAddComment" fx:id="submitCommentButton" />
            </VBox>
        </ScrollPane>
    </VBox>
</AnchorPane>
